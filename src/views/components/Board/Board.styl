@import '~shared-styles/consts.styl'

// Vars / config

$wrapper-spacer = 40px

// Styles

.wrapper
  margin-right $wrapper-spacer
  display inline-block
  position relative
  padding-left $wrapper-spacer

.container
  width 276px

.cardsBlock
  border-radius 4px
  border 1px solid $global-c-grey-border
  box-shadow 0px 0px 1px 0px $global-c-light-grey-bg
  height $global-h-cardsBlock
  position relative

.header
  padding 7px 0 0 4px
  margin 15px 0 19px 0
  font-size 24px
  line-height 24px
  color #333333

